<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputWorkers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de trabajadores"
        android:inputType="number" />

    <EditText
        android:id="@+id/inputInitialDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Días iniciales (4 trabajadores)"
        android:inputType="number" />

    <Button
        android:id="@+id/btnCalculateDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular días" />

    <TextView
        android:id="@+id/tvResultDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp" />

</LinearLayout>